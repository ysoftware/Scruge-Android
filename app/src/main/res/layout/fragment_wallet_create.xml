<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/field_background">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/profile"/>

                <EditText
                    android:id="@+id/wallet_create_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/regular"
                    android:hint="Account name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="45dp"
                    android:paddingEnd="0dp"
                    android:textColor="@color/text_regular"
                    android:textColorHint="@color/text_light"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="@color/field_background">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/lock"/>

                <EditText
                    android:id="@+id/wallet_create_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/regular"
                    android:hint="New password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingStart="45dp"
                    android:paddingEnd="0dp"
                    android:textColor="@color/text_regular"
                    android:textColorHint="@color/text_light"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="@color/field_background">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/lock"/>

                <EditText
                    android:id="@+id/wallet_create_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/regular"
                    android:hint="Confirm password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingStart="45dp"
                    android:paddingEnd="0dp"
                    android:textColor="@color/text_regular"
                    android:textColorHint="@color/text_light"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <com.scruge.scruge.view.views.ButtonView
                android:id="@+id/wallet_create_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/regular"
                android:text="Already have an EOS account?"
                android:textAlignment="center"
                android:textColor="@color/text_gray"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/wallet_create_import"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:fontFamily="@font/medium"
                android:text="Import your key"
                android:textAllCaps="false"
                android:textColor="@color/purple"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>