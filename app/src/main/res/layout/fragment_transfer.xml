<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/transfer_account_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="yaroslavero"
        android:textAlignment="center"
        android:textColor="@color/text_title"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/transfer_balance_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/regular"
        android:text="10403.0001 EETH"
        android:textAlignment="center"
        android:textColor="@color/text_gray"
        android:textSize="12sp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="@color/field_background">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/tab_profile"/>

        <EditText
            android:id="@+id/transfer_receiver"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:fontFamily="@font/regular"
            android:hint="Receiver"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingStart="45dp"
            android:paddingEnd="0dp"
            android:textColor="@color/text_regular"
            android:textColorHint="@color/text_light"
            android:textSize="14sp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="2.5dp"
            android:layout_weight="1"
            android:background="@color/field_background">

            <EditText
                android:id="@+id/transfer_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:fontFamily="@font/regular"
                android:hint="Amount"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:textColor="@color/text_regular"
                android:textColorHint="@color/text_light"
                android:textSize="14sp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="2.5dp"
            android:layout_weight="1"
            android:background="@color/field_background">

            <Spinner
                android:id="@+id/transfer_spinner"
                android:spinnerMode="dropdown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@color/field_background">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/lock"/>

        <EditText
            android:id="@+id/transfer_passcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:fontFamily="@font/regular"
            android:hint="Wallet password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingStart="45dp"
            android:paddingEnd="0dp"
            android:textColor="@color/text_regular"
            android:textColorHint="@color/text_light"
            android:textSize="14sp"/>

    </RelativeLayout>


</LinearLayout>