<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/res_resources"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="@string/title_eos_cpu"
                android:textColor="@color/text_title"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/res_cpu_staked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/regular"
                android:textColor="@color/text_gray"
                android:textSize="14sp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/res_cpu_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/regular"
            android:textColor="@color/text_gray"
            android:textSize="14sp"/>

        <com.scruge.scruge.view.views.ProgressView
            android:id="@+id/res_cpu_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="@string/title_eos_net"
                android:textColor="@color/text_title"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/res_net_staked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/regular"
                android:textColor="@color/text_gray"
                android:textSize="14sp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/res_net_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/regular"
            android:textColor="@color/text_gray"
            android:textSize="14sp"/>

        <com.scruge.scruge.view.views.ProgressView
            android:id="@+id/res_net_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/res_ram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="@string/title_eos_ram"
                android:textColor="@color/text_title"
                android:textSize="14sp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/res_ram_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/regular"
            android:textColor="@color/text_gray"
            android:textSize="14sp"/>

        <com.scruge.scruge.view.views.ProgressView
            android:id="@+id/res_ram_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/res_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.scruge.scruge.view.views.ButtonView
                android:id="@+id/res_stake_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

            <com.scruge.scruge.view.views.ButtonView
                android:id="@+id/res_ram_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>