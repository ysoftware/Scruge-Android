<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/last_update_large_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:text="Last update: "
            android:textColor="@color/text_title"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/last_update_tap"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/black_rounded"
            android:padding="15dp">

            <TextView
                android:id="@+id/last_update_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Title"
                android:textColor="@color/text_title"
                android:textSize="14sp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/last_update_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="article text"
                android:textColor="@color/text_regular"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/last_update_see_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="See all updates"
            android:textColor="@color/text_title"
            android:textSize="14sp"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>