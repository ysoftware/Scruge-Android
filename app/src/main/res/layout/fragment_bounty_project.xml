<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginBottom="5dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/campaign_info_image_constraint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintDimensionRatio="H,16:9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <WebView
                            android:id="@+id/project_web_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <ImageView
                            android:id="@+id/projectimage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/campaign_info_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/campaign_info_image_constraint"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="-30dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false">

                            <TextView
                                android:id="@+id/project_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/bold"
                                android:textColor="@color/text_regular"
                                android:textSize="16sp"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_marginTop="15dp"
                            android:id="@+id/project_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:textColor="@color/text_regular"
                            android:textSize="15sp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/about_social"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:nestedScrollingEnabled="false"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <!-- ECONOMIES -->

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:text="@string/title_token_economies"
                        android:textColor="@color/text_title"
                        android:textSize="17sp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/economies_supply"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="@string/label_total_token_supply"
                            android:textColor="@color/text_regular"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/economies_supply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/regular"
                            android:textAlignment="viewEnd"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/text_gray"
                            android:textSize="16sp"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:alpha="0.05"
                        android:background="@color/black"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/economies_public_percent"
                            android:text="@string/label_token_percent_for_public_sale"
                            android:textColor="@color/text_regular"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/economies_public_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/regular"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/text_gray"
                            android:textSize="16sp"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:alpha="0.05"
                        android:background="@color/black"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/project_economies_trading_static"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/economies_initial_release"
                            android:fontFamily="@font/regular"
                            android:textColor="@color/text_regular"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/project_economies_trading_value"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/regular"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/text_gray"
                            android:textSize="16sp"/>
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- DOCUMENTS -->

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:text="@string/title_documents"
                        android:textColor="@color/text_title"
                        android:textSize="17sp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="15dp"
                        android:nestedScrollingEnabled="false"
                        android:id="@+id/project_documents_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <Button
        android:textColor="@color/white"
        android:background="@color/purple"
        android:id="@+id/earn_button"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</RelativeLayout>